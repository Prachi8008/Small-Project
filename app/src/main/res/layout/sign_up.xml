<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sign_up">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/sign_up"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:id="@+id/signImg"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_your_account"
        android:textStyle="bold"
        android:layout_below="@+id/signImg"
        android:textSize="20sp"
        android:id="@+id/txtView1"
        android:layout_marginLeft="30dp"/>

    <EditText
        android:id="@+id/edittext1"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtView1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="7dp"
        android:hint="Username"
        android:padding="10dp"
        android:minHeight="48dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/background"
        android:drawableLeft="@drawable/baseline_account_circle_24"
        android:drawablePadding="10dp"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black"/>

    <EditText
        android:id="@+id/edittext2"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/edittext1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="7dp"
        android:hint="Email"
        android:padding="10dp"
        android:textColor="@android:color/black"
        android:drawableLeft="@drawable/baseline_email_24"
        android:drawablePadding="10dp"
        android:textColorHint="@android:color/black"
        android:minHeight="48dp"
        android:background="@drawable/background"/>

    <EditText
        android:id="@+id/edittext3"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/edittext2"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background"
        android:textColor="@android:color/black"
        android:padding="10dp"
        android:drawableLeft="@drawable/baseline_password_24"
        android:drawablePadding="10dp"
        android:textColorHint="@android:color/black"
        android:hint="Password"
        android:minHeight="48dp"
        android:drawableRight="@drawable/baseline_remove_red_eye_24" />

    <EditText
        android:id="@+id/edittext4"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/edittext3"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background"
        android:padding="10dp"
        android:textColor="@android:color/black"
        android:drawableLeft="@drawable/baseline_password_24"
        android:drawablePadding="10dp"
        android:textColorHint="@android:color/black"
        android:hint="Confirm Password"
        android:layout_marginTop="7dp"
        android:minHeight="48dp"
        android:drawableRight="@drawable/baseline_remove_red_eye_24"
        />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edittext4"
        android:layout_marginLeft="30dp"
        android:text="I agree with Privacy and Policy"
        android:id="@+id/checkbox" />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkbox"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:elevation="10dp"
        app:cardCornerRadius="15dp"
        android:id="@+id/card">

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:paddingHorizontal="20dp"
            android:paddingVertical="16dp"
            android:background="@drawable/buttonbg"
            android:text="Sign Up"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="18sp"
            android:id="@+id/btn1"
            />
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/txtView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:text="or contiune with"
        android:textSize="15dp"
        tools:ignore="TextSizeCheck" />


    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/google"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/txtView2"
        android:layout_marginLeft="60dp"
        android:id="@+id/googleImg"
        android:background="@drawable/buttonplain" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/facebook"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/txtView2"
        android:layout_centerHorizontal="true"
        android:id="@+id/facebookImg"
        android:background="@drawable/buttonplain" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/applelog"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/txtView2"
        android:layout_marginLeft="290dp"
        android:id="@+id/appleImg"
        android:background="@drawable/buttonplain" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/facebookImg"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="35dp"
        android:text="Already have an account?"
        android:textSize="14sp"
        tools:ignore="TextSizeCheck"
        android:id="@+id/txtView3"/>


    <TextView
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_below="@id/facebookImg"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/buttonplain"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:text="Sign In"
        android:textSize="16dp"
        android:textAlignment="center"
        android:paddingVertical="11dp"
        android:id="@+id/btn2"
        />


</RelativeLayout>